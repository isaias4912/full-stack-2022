    <link rel="stylesheet" href="../estilos/main.css">
    <link rel="stylesheet" href="../estilos/login.css">
</head>

<body>
    <header>
        <%- include('header2'); -%>
        
    </header>
    <main>

        <div class="container justify-content-center " id="form">
           
            <div class="row container justify-content-center">
                <h1>AGREGAR PARTIDO</h1>
                <div class="formulario container col-12 col-md-10">

                    <form class="row needs-validation mt-1" novalidate action="/savepartido" method="POST">
                        <div class="col-12 detalle">
                            <div class="col-12 col-lg-5">
                                <label for="equipo1" class="form-label">Seleccione Equipo 1</label>
                                <select class="form-select" name="equipo1" id="" required>
                                    <option selected disabled></option>
                                    <option value="BELGICA">BELGICA</option>
                                    <option value="TUNEZ">TUNEZ</option>
                                    <option value="SENEGAL">SENEGAL</option>
                                    <option value="ARGENTINA">ARGENTINA</option>
                                    <option value="REINO UNIDO">REINO UNIDO</option>
                                    <option value="QATAR">QATAR</option>
                                    <option value="POLONIA">POLONIA</option>
                                    <option value="FRANCIA">FRANCIA</option>
                                    <option value="MEXICO">MEXICO</option>
                                    <option value="IRAN">IRAN</option>
                                    <option value="INGLATERRA">INGLATERRA</option>
                                    <option value="GALES">GALES</option>
                                    <option value="ESTADOS UNIDOS">ESTADOS UNIDOS</option>
                                    <option value="ESPAÑA">ESPAÑA</option>
                                    <option value="DINAMARCA">DINAMARCA</option>
                                    <option value="ARABIA SAUDITA">ARABIA SAUDITA</option>
                                    <option value="ECUADOR">ECUADOR</option>
                                    <option value="ALEMANIA">ALEMANIA</option>
                                    <option value="URUGUAY">URUGUAY</option>
                                    <option value="POLONIA">POLONIA</option>
                                    <option value="AUSTRALIA">AUSTRALIA</option>
                                </select>
                                <div class="invalid-feedback">
                                    Por Favor Seleccione EQUIPO 1.
                                </div>
                            </div>

                            <!-- Fin primer multiselector de paises -->

                            <!-- Inicio Segunda carga multi-selector de paises -->

                            <div class=" col-lg-2"></div> 
                            <div class="col-12 col-lg-5 ">
                                <label for="equipo2" class="form-label">Seleccione Equipo 2</label>
                                <select class="form-select" name="equipo2" id="" required>
                                    <option selected disabled></option>
                                    <option value="BELGICA">BELGICA</option>
                                    <option value="TUNEZ">TUNEZ</option>
                                    <option value="SENEGAL">SENEGAL</option>
                                    <option value="ARGENTINA">ARGENTINA</option>
                                    <option value="REINO UNIDO">REINO UNIDO</option>
                                    <option value="QATAR">QATAR</option>
                                    <option value="POLONIA">POLONIA</option>
                                    <option value="FRANCIA">FRANCIA</option>
                                    <option value="MEXICO">MEXICO</option>
                                    <option value="IRAN">IRAN</option>
                                    <option value="INGLATERRA">INGLATERRA</option>
                                    <option value="GALES">GALES</option>
                                    <option value="ESTADOS UNIDOS">ESTADOS UNIDOS</option>
                                    <option value="ESPAÑA">ESPAÑA</option>
                                    <option value="DINAMARCA">DINAMARCA</option>
                                    <option value="ARABIA SAUDITA">ARABIA SAUDITA</option>
                                    <option value="ECUADOR">ECUADOR</option>
                                    <option value="ALEMANIA">ALEMANIA</option>
                                    <option value="URUGUAY">URUGUAY</option>
                                    <option value="POLONIA">POLONIA</option>
                                    <option value="AUSTRALIA">AUSTRALIA</option>

                                </select>
                                <div class="invalid-feedback">
                                    Por Favor Seleccione EQUIPO 2.
                                </div>
                            </div>
                        </div>

                        <!-- Fin segunda carga multi-selector de paises -->




                        <div class="col-12  mt-8 detalle">
                            <div id="" class="col-lg-5">
                                <label for="dia"  class="d-block">Fecha y Hora</label>

                                <input type="date" id="dia" value="" name="fecha" >
                                
                                <input type="time" id="hora" value="" name="hora">
                                <div class="invalid-feedback">
                                    Por Favor indique fecha y hora
                                </div>


                            </div>

                            <div class="col-lg-2"></div> 
                            <div class="col-lg-5">
                                <label for="estadio" class="form-label">Seleccione Estadio</label>
                                <select class="form-select" name="estadio" id="" required>
                                    <option selected disabled></option>
                                    <option value="AL THUMANA">Al thumana</option>
                                    <option value="AL BAYT">Al Bayt</option>
                                    <option value="AL RAYYAN">Al-Rayyan</option>
                                    <option value="RAS ABU ABOUD">Ras Abu Aboud</option>
                                    <option value="AL JANOUB">Al Janoub</option>
                                    <option value="EDUCATION CITY">Education City</option>
                                    <option value="STADIUM 974">Stadium 974</option>
                                    <option value="lusail">Lusail</option>
                                </select>
                                <div class="invalid-feedback">
                                    Por Favor Seleccione estadio.
                                </div>
                            </div>
                        </div>



                        <div class="col-12 d-flex mt-8">
                            <div class=" col-6 ">
                                <button class="btn btn-primary guardar" type="submit" id="custom-btn">Agregar </button>

                            </div>
                            <div class="col-6">
                                <a href="/partidos" class="btn btn-secondary guardar" type="submit"
                                    id="custom-cancelar">Cancelar</a>

                            </div>



                        </div>
                    </form>

                </div>
            </div>
        </div>

    </main>


    <footer>
        <%- include('footer'); -%>
       

    </footer>
